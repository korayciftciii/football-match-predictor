# Football Match Predictor - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (Required)
# =============================================================================

# API-Football API Key
# Get your free API key from: https://www.api-football.com/
# Free plan includes 100 requests per day
API_FOOTBALL_KEY=your_api_football_key_here

# OpenRouter API Key  
# Get your API key from: https://openrouter.ai/
# Used for AI-powered match analysis and summaries
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Hugging Face API Key (Optional)
# Get your API key from: https://huggingface.co/settings/tokens
# Used for advanced ML models and datasets
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Telegram Bot Token
# Create a bot via @BotFather on Telegram: https://t.me/botfather
# Follow the instructions to get your bot token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection URL
# Local development: redis://localhost:6379/0
# Docker: redis://redis:6379/0
# Cloud Redis: redis://username:password@host:port/db
REDIS_URL=redis://localhost:6379/0

# Redis connection pool settings
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Server configuration
HOST=0.0.0.0
PORT=8000

# Application name and version
APP_NAME=Football Match Predictor
APP_VERSION=1.0.0

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Default cache TTL in seconds (1 hour = 3600)
CACHE_TTL=3600

# Prediction cache duration in hours
PREDICTION_CACHE_HOURS=3

# Match data cache duration in minutes
MATCH_DATA_CACHE_MINUTES=30

# API response cache duration in minutes
API_RESPONSE_CACHE_MINUTES=15

# =============================================================================
# ML MODEL SETTINGS
# =============================================================================

# Minimum confidence threshold for predictions (0.0 to 1.0)
MODEL_CONFIDENCE_THRESHOLD=0.6

# Prediction generation timeout in seconds
PREDICTION_TIMEOUT=30

# Maximum concurrent predictions
MAX_CONCURRENT_PREDICTIONS=5

# Enable/disable specific prediction models
ENABLE_SCORE_PREDICTION=true
ENABLE_GOAL_SCORER_PREDICTION=true
ENABLE_CARDS_PREDICTION=true
ENABLE_CORNERS_PREDICTION=true

# =============================================================================
# API SETTINGS
# =============================================================================

# API request timeout in seconds
API_TIMEOUT=30

# Rate limiting (requests per minute)
API_RATE_LIMIT=100

# Burst limit for rate limiting
API_BURST_LIMIT=200

# Retry settings
API_MAX_RETRIES=3
API_RETRY_DELAY=1

# =============================================================================
# TELEGRAM BOT SETTINGS
# =============================================================================

# Bot polling interval in seconds
BOT_POLLING_INTERVAL=1

# Maximum message length for Telegram
MAX_MESSAGE_LENGTH=4096

# Enable/disable bot features
ENABLE_INLINE_KEYBOARDS=true
ENABLE_MATCH_NOTIFICATIONS=false

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Enable metrics collection
ENABLE_METRICS=true

# Metrics collection interval in seconds
METRICS_INTERVAL=60

# Log file settings
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Health check settings
HEALTH_CHECK_TIMEOUT=10
ENABLE_DETAILED_HEALTH_CHECKS=true

# =============================================================================
# SECURITY SETTINGS (Production)
# =============================================================================

# Secret key for session management (generate a secure random string)
SECRET_KEY=your_secret_key_here_change_in_production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend.com

# Enable HTTPS redirect in production
FORCE_HTTPS=false

# =============================================================================
# DATABASE SETTINGS (Future Use)
# =============================================================================

# Database URL (for future database integration)
# DATABASE_URL=postgresql://user:password@localhost:5432/football_predictor

# Database connection pool settings
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=30
# DB_POOL_TIMEOUT=30

# =============================================================================
# EXTERNAL SERVICE SETTINGS
# =============================================================================

# API-Football specific settings
API_FOOTBALL_BASE_URL=https://v3.football.api-sports.io
API_FOOTBALL_TIMEOUT=30

# OpenRouter specific settings
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=deepseek/deepseek-chat
OPENROUTER_TIMEOUT=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
ENABLE_AI_SUMMARIES=true
ENABLE_BATCH_PREDICTIONS=true
ENABLE_PREDICTION_ACCURACY_TRACKING=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_GRACEFUL_DEGRADATION=true

# Experimental features (use with caution)
ENABLE_EXPERIMENTAL_MODELS=false
ENABLE_ADVANCED_ANALYTICS=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Worker processes (for production deployment)
WORKERS=4

# Maximum connections
MAX_CONNECTIONS=100

# Connection pool size
POOL_SIZE=20

# Request timeout
REQUEST_TIMEOUT=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (development only)
DEBUG=false

# Enable auto-reload (development only)
RELOAD=false

# Enable profiling
ENABLE_PROFILING=false

# Mock external APIs (for testing)
MOCK_APIS=false

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup settings (for future use)
# BACKUP_ENABLED=false
# BACKUP_INTERVAL_HOURS=24
# BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_PATH=/backups

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Webhook URLs for notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# Email settings (for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=true

# =============================================================================
# ANALYTICS AND TRACKING
# =============================================================================

# Google Analytics (optional)
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# Custom analytics endpoint (optional)
# ANALYTICS_ENDPOINT=https://your-analytics-service.com/track

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Use strong, unique values for SECRET_KEY in production
# 3. Regularly rotate API keys and tokens
# 4. Monitor API usage to avoid rate limits
# 5. Use environment-specific values for different deployments
# 6. Consider using a secrets management service for production

